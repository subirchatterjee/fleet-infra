apiVersion: v1
kind: Service
metadata:
  name: frigate-tcp
  namespace: home-automation
  annotations:
    metallb.universe.tf/allow-shared-ip: home-automation-frigate
spec:
  type: LoadBalancer
  loadBalancerIP: 192.168.1.69
  selector:
    app: frigate
  ports:
    - name: http-frigate
      protocol: TCP
      port: 80
      targetPort: 5000
    - name: rtmp-frigate
      protocol: TCP
      port: 1935
      targetPort: 1935
    - name: rtsp-frigate
      protocol: TCP
      port: 8555
      targetPort: 8555
---
apiVersion: v1
kind: Service
metadata:
  name: frigate-udp
  namespace: home-automation
  annotations:
    metallb.universe.tf/allow-shared-ip: home-automation-frigate
spec:
  type: LoadBalancer
  loadBalancerIP: 192.168.1.69
  selector:
    app: frigate
  ports:
    - name: rtsp-frigate
      protocol: UDP
      port: 8555
      targetPort: 8555
